      "cell_type": "code",
      "source": [
        "# Crear un arreglo de números\n",
        "numeros = [1, 2, 3, 4, 5]\n",
        "print(numeros) # [1, 2, 3, 4, 5]\n",
        "\n",
        "# Acceder a un elemento\n",
        "print(numeros[0]) # 1\n",
        "\n",
        "# Modificar un elemento\n",
        "numeros[0] = 10\n",
        "print(numeros) # [10, 2, 3, 4, 5]\n",
        "\n",
        "# Crear un arreglo de cadenas\n",
        "frutas = ['manzana', 'banana', 'naranja']\n",
        "print(frutas) # ['manzana', 'banana', 'naranja']\n",
        "\n",
        "# Acceder a un elemento\n",
        "print(frutas[1]) # banana\n",
        "\n",
        "# Agregar un elemento\n",
        "frutas.append('fresa')\n",
        "print(frutas) # ['manzana', 'banana', 'naranja', 'fresa']"
